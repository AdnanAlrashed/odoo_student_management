            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="is_read"/>
                        </group>
                        <group>
                            <!-- <field name="created_at" readonly="1"/>
                            <field name="updated_at" readonly="1"/> -->
                        </group>
                    </group>
                    <notebook>
                        <page string="Message">
                            <field name="message"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Student Notification Search View -->
    <record id="notification_student_search_view" model="ir.ui.view">
        <field name="name">student.notification.student.search</field>
        <field name="model">student_management.notification_student</field>
        <field name="arch" type="xml">
            <search>
                <field name="student_id"/>
                <field name="message"/>
                <filter string="Read" name="read" domain="[('is_read', '=', True)]"/>
                <filter string="Unread" name="unread" domain="[('is_read', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Student" name="group_student" context="{'group_by': 'student_id'}"/>
                    <filter string="Read Status" name="group_read" context="{'group_by': 'is_read'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Student Notification Action -->
    <record id="notification_student_action" model="ir.actions.act_window">
        <field name="name">Student Notifications</field>
        <field name="res_model">student_management.notification_student</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="notification_student_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No student notifications yet!
            </p>
        </field>
    </record>
</odoo>

