<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Student list View -->
        <record id="view_student_list" model="ir.ui.view">
            <field name="name">student_management.student.list</field>
            <field name="model">student_management.student</field>
            <field name="arch" type="xml">
                <list string="Students" default_order="name">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="course_id"/>
                    <field name="session_year_id"/>
                    <field name="gender"/>
                    <field name="active" widget="boolean_toggle"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>

        <!-- Student Form View -->
        <record id="view_student_form" model="ir.ui.view">
            <field name="name">student_management.student.form</field>
            <field name="model">student_management.student</field>
            <field name="arch" type="xml">
                <form string="Student">
                    <header>
                        <button name="action_create_user" type="object" string="Create User Account" 
                                class="btn-primary" invisible="['user_id', '!=', False]"/>
                        <button name="action_activate" type="object" string="Activate" 
                                class="btn-primary" invisible="['active', '=', True]"/>
                        <button name="action_deactivate" type="object" string="Deactivate" 
                                class="btn-secondary" invisible="['active', '=', False]"/>
                        <field name="active" statusbar_visible="active"/>
                    </header>
                    <sheet>
                        <field name="profile_pic" widget="image" class="oe_avatar" options="{'preview_image': 'profile_pic', 'size': [90, 90]}"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="user_id" options="{'no_create': True}"/>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="gender"/>
                            </group>
                            <group>
                                <field name="course_id" required="1" options="{'no_create': True}"/>
                                <field name="session_year_id" required="1" options="{'no_create': True}"/>
                                <field name="active"/>
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="address" placeholder="Full Address"/>
                        </group>
                        <notebook>
                            <page string="Academic Info" name="academic">
                                <group>
                                    <group string="Course Information">
                                        <field name="course_id" readonly="1"/>
                                        <field name="session_year_id" readonly="1"/>
                                    </group>
                                    <group string="Statistics">
                                        <field name="subject_count" readonly="1"/>
                                        <field name="attendance_percentage" readonly="1" widget="percentage"/>
                                        <field name="overall_grade" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Subjects" name="subjects">
                                <field name="subject_ids" readonly="1">
                                    <list>
                                        <field name="subject_name"/>
                                        <field name="staff_id"/>
                                        <field name="active"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Attendance" name="attendance">
                                <field name="attendance_report_ids" readonly="1">
                                    <list>
                                        <field name="subject_id"/>
                                        <field name="attendance_date"/>
                                        <field name="status"/>
                                        <field name="create_date"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Results" name="results">
                                <field name="result_ids" readonly="1">
                                    <list>
                                        <field name="subject_id"/>
                                        <field name="total_marks"/>
                                        <field name="percentage"/>
                                        <field name="grade"/>
                                        <field name="status"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Leave Requests" name="leave_requests">
                                <field name="leave_ids" readonly="1">
                                    <list>
                                        <field name="leave_date"/>
                                        <field name="leave_end_date"/>
                                        <field name="leave_duration"/>
                                        <field name="leave_status"/>
                                        <field name="create_date"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Feedback" name="feedback">
                                <field name="feedback_ids" readonly="1">
                                    <list>
                                        <field name="category"/>
                                        <field name="priority"/>
                                        <field name="is_replied"/>
                                        <field name="create_date"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Notifications" name="notifications">
                                <field name="notification_ids" readonly="1">
                                    <list>
                                        <field name="title"/>
                                        <field name="notification_type"/>
                                        <field name="priority"/>
                                        <field name="is_read"/>
                                        <field name="create_date"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter reload_on_follower="True"/>
                </form>
            </field>
        </record>

        <!-- Student Kanban View -->
        <record id="view_student_kanban" model="ir.ui.view">
            <field name="name">student_management.student.kanban</field>
            <field name="model">student_management.student</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="course_id"/>
                    <field name="session_year_id"/>
                    <field name="gender"/>
                    <field name="active"/>
                    <field name="profile_pic"/>
                    <field name="attendance_percentage"/>
                    <field name="overall_grade"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="email"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="row">
                                            <div class="col-12">
                                                <i class="fa fa-graduation-cap"/> <field name="course_id"/>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <i class="fa fa-calendar"/> <field name="session_year_id"/>
                                            </div>
                                            <div class="col-6">
                                                <i class="fa fa-venus-mars"/> <field name="gender"/>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <i class="fa fa-check-circle"/> <field name="attendance_percentage" widget="percentage"/>
                                            </div>
                                            <div class="col-6">
                                                <i class="fa fa-star"/> <field name="overall_grade"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="active" widget="boolean_toggle"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <img t-att-src="kanban_image('student_management.student', 'profile_pic', record.id.raw_value)" 
                                             class="oe_kanban_avatar" width="24" height="24"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Student Search View -->
        <record id="view_student_search" model="ir.ui.view">
            <field name="name">student_management.student.search</field>
            <field name="model">student_management.student</field>
            <field name="arch" type="xml">
                <search string="Search Students">
                    <field name="name" string="Name" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="email" string="Email"/>
                    <field name="phone" string="Phone"/>
                    <field name="course_id" string="Course"/>
                    <field name="session_year_id" string="Session Year"/>
                    <separator/>
                    <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                    <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter name="male" string="Male" domain="[('gender', '=', 'male')]"/>
                    <filter name="female" string="Female" domain="[('gender', '=', 'female')]"/>
                    <separator/>
                    <filter name="has_user" string="Has User Account" domain="[('user_id', '!=', False)]"/>
                    <filter name="no_user" string="No User Account" domain="[('user_id', '=', False)]"/>
                    <separator/>
                    <filter name="good_attendance" string="Good Attendance (>80%)" domain="[('attendance_percentage', '>', 80)]"/>
                    <filter name="poor_attendance" string="Poor Attendance (&lt;60%)" domain="[('attendance_percentage', '&lt;', 60)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_course" string="Course" context="{'group_by': 'course_id'}"/>
                        <filter name="group_by_session" string="Session Year" context="{'group_by': 'session_year_id'}"/>
                        <filter name="group_by_gender" string="Gender" context="{'group_by': 'gender'}"/>
                        <filter name="group_by_active" string="Status" context="{'group_by': 'active'}"/>
                        <filter name="group_by_create_date" string="Creation Date" context="{'group_by': 'create_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Student Action -->
        <record id="odoo_student_management.action_student" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="res_model">student_management.student</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add your first student!
                </p>
                <p>
                    Students are enrolled in courses and session years.
                    They can have user accounts for system access and track their academic progress.
                </p>
            </field>
        </record>
        <!-- <menuitem id="menu_student"
                   name="Students"
                   parent="menu_user_management"
                   action="action_student"
                   sequence="20"/> -->
    </data>
</odoo>
