<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Subject list View -->
        <record id="view_subject_list" model="ir.ui.view">
            <field name="name">student_management.subject.list</field>
            <field name="model">student_management.subject</field>
            <field name="type">qweb</field>
            <field name="arch" type="xml">
                <list string="Subjects" default_order="subject_name">
                    <field name="subject_name"/>
                    <field name="course_id"/>
                    <field name="staff_id"/>
                    <field name="active" widget="boolean_toggle"/>
                    <field name="student_count"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>

        <!-- Subject Form View -->
        <record id="view_subject_form" model="ir.ui.view">
            <field name="name">student_management.subject.form</field>
            <field name="model">student_management.subject</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Subject">
                    <header>
                        <button name="action_activate" type="object" string="Activate" 
                                class="btn-primary" invisible="['active', '=', True]"/>
                        <button name="action_deactivate" type="object" string="Deactivate" 
                                class="btn-secondary" invisible="['active', '=', False]"/>
                        <!-- <field name="active" statusbar_visible="active,archived"/> -->
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="subject_name" placeholder="Subject Name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="course_id" required="1" options="{'no_create': True}"/>
                                <field name="staff_id" options="{'no_create': True}"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="student_count" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Students" name="students">
                                <field name="student_ids" readonly="1">
                                    <list>
                                        <field name="name" widget="many2one_avatar"/>
                                        <field name="session_year_id"/>
                                        <field name="gender"/>
                                        <field name="active"/>
                                    </list>
                                    <form>
                                        <group>
                                            <field name="name" widget="many2one_avatar"/>
                                            <field name="course_id"/>
                                            <field name="session_year_id"/>
                                            <field name="gender"/>
                                            <field name="active"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Attendance Records" name="attendance">
                                <field name="attendance_report_ids" readonly="1">
                                    <list>
                                        <field name="student_id"/>
                                        <field name="attendance_id"/>
                                        <field name="status"/>
                                        <field name="create_date"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Results" name="results">
                                <field name="result_ids" readonly="1">
                                    <list>
                                        <field name="student_id"/>
                                        <field name="total_marks"/>
                                        <field name="percentage"/>
                                        <field name="grade"/>
                                        <field name="status"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter reload_on_follower="True"/>
                </form>
            </field>
        </record>

        <!-- Subject Search View -->
        <record id="view_subject_search" model="ir.ui.view">
            <field name="name">student_management.subject.search</field>
            <field name="model">student_management.subject</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Subjects">
                    <field name="subject_name" string="Subject Name" filter_domain="[('subject_name', 'ilike', self)]"/>
                    <field name="course_id" string="Course"/>
                    <field name="staff_id" string="Staff"/>
                    <separator/>
                    <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                    <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter name="has_staff" string="Has Staff Assigned" domain="[('staff_id', '!=', False)]"/>
                    <filter name="no_staff" string="No Staff Assigned" domain="[('staff_id', '=', False)]"/>
                    <separator/>
                    <filter name="has_students" string="Has Students" domain="[('student_ids', '!=', False)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_course" string="Course" context="{'group_by': 'course_id'}"/>
                        <filter name="group_by_staff" string="Staff" context="{'group_by': 'staff_id'}"/>
                        <filter name="group_by_active" string="Status" context="{'group_by': 'active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Subject Action -->
        <record id="action_subject" model="ir.actions.act_window">
            <field name="name">Subjects</field>
            <field name="res_model">student_management.subject</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first subject!
                </p>
                <p>
                    Subjects are individual courses within academic programs.
                    Each subject can be assigned to a staff member and belongs to a course.
                </p>
            </field>
        </record>
        <menuitem id="menu_subject"
                   name="Subjects"
                   parent="menu_academic_management"
                   action="action_subject"
                   sequence="30"/>
    </data>
</odoo>
