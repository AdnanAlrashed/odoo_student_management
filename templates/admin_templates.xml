<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Admin Dashboard -->
    <template id="admin_dashboard_template" name="Admin Dashboard">
        <t t-call="odoo_student_management.portal_two_col_layout">
            <t t-set="title">Admin Dashboard</t>

            <!-- Welcome -->
            <div class="mb-4">
                <h1 class="h2 text-primary mb-2">Welcome, Admin!</h1>
                <p class="text-muted">Main control panel for managing the education system</p>
            </div>

            <!-- KPI Cards -->
            <div class="row mb-4">
                <!-- Total Students -->
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center">
                            <div class="d-flex align-items-center justify-content-center mb-2">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                    <i class="fas fa-user-graduate text-primary fa-2x"></i>
                                </div>
                            </div>
                            <h3 class="h4 mb-1 text-primary" t-out="total_students or '0'">0</h3>
                            <p class="text-muted mb-0 small">Total Students</p>
                        </div>
                    </div>
                </div>

                <!-- Total Staff -->
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center">
                            <div class="d-flex align-items-center justify-content-center mb-2">
                                <div class="bg-success bg-opacity-10 rounded-circle p-3">
                                    <i class="fas fa-chalkboard-teacher text-success fa-2x"></i>
                                </div>
                            </div>
                            <h3 class="h4 mb-1 text-success" t-out="total_staff or '0'">0</h3>
                            <p class="text-muted mb-0 small">Total Staff</p>
                        </div>
                    </div>
                </div>

                <!-- Total Courses -->
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center">
                            <div class="d-flex align-items-center justify-content-center mb-2">
                                <div class="bg-info bg-opacity-10 rounded-circle p-3">
                                    <i class="fas fa-book text-info fa-2x"></i>
                                </div>
                            </div>
                            <h3 class="h4 mb-1 text-info" t-out="total_courses or '0'">0</h3>
                            <p class="text-muted mb-0 small">Total Courses</p>
                        </div>
                    </div>
                </div>

                <!-- Total Subjects -->
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center">
                            <div class="d-flex align-items-center justify-content-center mb-2">
                                <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                                    <i class="fas fa-clipboard-list text-warning fa-2x"></i>
                                </div>
                            </div>
                            <h3 class="h4 mb-1 text-warning" t-out="total_subjects or '0'">0</h3>
                            <p class="text-muted mb-0 small">Total Subjects</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-0 pb-0">
                            <h5 class="card-title mb-0">Quick Actions</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <!-- Add New Student -->
                                <div class="col-md-4 col-sm-6 mb-3">
                                    <a href="/student_management/admin/student/add" class="btn btn-outline-primary w-100 h-100 d-flex flex-column align-items-center justify-content-center py-3 text-decoration-none">
                                        <i class="fas fa-user-plus fa-2x mb-2"></i>
                                        <span>Add New Student</span>
                                    </a>
                                </div>

                                <!-- Add New Staff -->
                                <div class="col-md-4 col-sm-6 mb-3">
                                    <a href="/student_management/admin/staff/add" class="btn btn-outline-success w-100 h-100 d-flex flex-column align-items-center justify-content-center py-3 text-decoration-none">
                                        <i class="fas fa-user-tie fa-2x mb-2"></i>
                                        <span>Add New Staff Member</span>
                                    </a>
                                </div>

                                <!-- Add New Course -->
                                <div class="col-md-4 col-sm-6 mb-3">
                                    <a href="/student_management/admin/course/add" class="btn btn-outline-info w-100 h-100 d-flex flex-column align-items-center justify-content-center py-3 text-decoration-none">
                                        <i class="fas fa-plus-circle fa-2x mb-2"></i>
                                        <span>Add New Course</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity & Quick Reports -->
            <div class="row">
                <!-- Recent Activity -->
                <div class="col-md-6 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-white border-0 pb-0">
                            <h5 class="card-title mb-0">Recent Activity</h5>
                        </div>
                        <div class="card-body">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item border-0 px-0">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                            <i class="fas fa-user-plus text-primary"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <p class="mb-0 small">A new student was added</p>
                                            <small class="text-muted">2 hours ago</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="list-group-item border-0 px-0">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3">
                                            <i class="fas fa-check text-success"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <p class="mb-0 small">Staff record updated</p>
                                            <small class="text-muted">4 hours ago</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="list-group-item border-0 px-0">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-info bg-opacity-10 rounded-circle p-2 me-3">
                                            <i class="fas fa-book text-info"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <p class="mb-0 small">New course created</p>
                                            <small class="text-muted">Yesterday</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Reports -->
                <div class="col-md-6 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-white border-0 pb-0">
                            <h5 class="card-title mb-0">Quick Reports</h5>
                        </div>
                        <div class="card-body">
                            <div class="list-group list-group-flush">
                                <a href="/student_management/admin/reports/students" class="list-group-item list-group-item-action border-0 px-0">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-chart-bar text-primary me-3"></i>
                                        <span>Students Report</span>
                                    </div>
                                </a>
                                <a href="/student_management/admin/reports/attendance" class="list-group-item list-group-item-action border-0 px-0">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-calendar-check text-success me-3"></i>
                                        <span>Attendance Report</span>
                                    </div>
                                </a>
                                <a href="/student_management/admin/reports/performance" class="list-group-item list-group-item-action border-0 px-0">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-chart-line text-info me-3"></i>
                                        <span>Performance Report</span>
                                    </div>
                                </a>
                                <a href="/student_management/admin/reports/financial" class="list-group-item list-group-item-action border-0 px-0">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-dollar-sign text-warning me-3"></i>
                                        <span>Financial Report</span>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                
            </div>
            <!-- Extra KPIs -->
            <div class="row mb-4">
            <!-- Pending Staff Leaves -->
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="d-flex align-items-center justify-content-center mb-2">
                    <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                        <i class="fas fa-user-check text-warning fa-2x"></i>
                    </div>
                    </div>
                    <h3 class="h4 mb-1 text-warning" t-out="pending_staff_leaves or '0'">0</h3>
                    <p class="text-muted mb-0 small">Pending Staff Leaves</p>
                </div>
                </div>
            </div>

            <!-- Pending Student Leaves -->
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="d-flex align-items-center justify-content-center mb-2">
                    <div class="bg-danger bg-opacity-10 rounded-circle p-3">
                        <i class="fas fa-user-clock text-danger fa-2x"></i>
                    </div>
                    </div>
                    <h3 class="h4 mb-1 text-danger" t-out="pending_student_leaves or '0'">0</h3>
                    <p class="text-muted mb-0 small">Pending Student Leaves</p>
                </div>
                </div>
            </div>

            <!-- Total Sessions -->
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="d-flex align-items-center justify-content-center mb-2">
                    <div class="bg-secondary bg-opacity-10 rounded-circle p-3">
                        <i class="fas fa-calendar-alt text-secondary fa-2x"></i>
                    </div>
                    </div>
                    <h3 class="h4 mb-1 text-secondary" t-out="total_sessions or '0'">0</h3>
                    <p class="text-muted mb-0 small">Total Sessions</p>
                </div>
                </div>
            </div>

            <!-- Total Attendance Records -->
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="d-flex align-items-center justify-content-center mb-2">
                    <div class="bg-info bg-opacity-10 rounded-circle p-3">
                        <i class="fas fa-list-check text-info fa-2x"></i>
                    </div>
                    </div>
                    <h3 class="h4 mb-1 text-info" t-out="total_attendance or '0'">0</h3>
                    <p class="text-muted mb-0 small">Total Attendance</p>
                </div>
                </div>
            </div>
            </div>

            

            <!-- Font Awesome (icons) -->
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"/>

            <!-- Page CSS tweaks -->
            <style>
                .card { transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out; }
                .card:hover { transform: translateY(-2px); box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important; }
                .btn-outline-primary:hover,
                .btn-outline-success:hover,
                .btn-outline-info:hover { transform: translateY(-1px); transition: all 0.2s ease-in-out; }
                .list-group-item-action:hover { background-color: rgba(0,0,0,0.02); }
            </style>
        </t>
    </template>

    <!-- Add Staff -->
    <template id="add_staff_template" name="Add Staff">
        <t t-call="odoo_student_management.portal_two_col_layout">
            <t t-set="title">Add Staff</t>

            <t t-if="error">
            <div class="alert alert-danger" role="alert" t-out="error"/>
            </t>
            <t t-if="success">
            <div class="alert alert-success" role="alert" t-out="success"/>
            </t>

            <form action="/student_management/admin/staff/add" method="post" class="o_website_form">
            <!-- ✅ CSRF ضروري -->
            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

            <!-- اختيار مستخدم موجود -->
            <div class="card mb-3">
                <div class="card-body">
                <h5 class="mb-3">Link Existing User</h5>
                <div class="row g-3 align-items-end">
                    <div class="col-md-8">
                    <label class="form-label">Select User</label>
                    <select name="user_id" class="form-select">
                        <option value="">-- Choose existing user --</option>
                        <t t-foreach="available_users or []" t-as="u">
                        <option t-att-value="u.id">
                            <t t-out="u.name"/> (<t t-out="u.login"/>)
                        </option>
                        </t>
                    </select>
                    <small class="text-muted">Users already linked to active staff are excluded.</small>
                    </div>
                </div>
                </div>
            </div>

            <div class="text-center my-2">— OR —</div>

            <!-- إنشاء مستخدم جديد -->
            <div class="card mb-3">
                <div class="card-body">
                <h5 class="mb-3">Create New User</h5>
                <div class="row g-3">
                    <div class="col-md-4">
                    <label class="form-label">Name</label>
                    <input type="text" name="name" class="form-control"/>
                    </div>
                    <div class="col-md-4">
                    <label class="form-label">Email (Login)</label>
                    <input type="email" name="email" class="form-control"/>
                    </div>
                    <div class="col-md-4">
                    <label class="form-label">Password</label>
                    <input type="password" name="password" class="form-control"/>
                    </div>
                </div>
                </div>
            </div>

            <!-- بيانات الموظف الإضافية (اختياري) -->
            <div class="card mb-3">
                <div class="card-body">
                <h5 class="mb-3">Staff Info</h5>
                <div class="row g-3">
                    <div class="col-md-4">
                    <label class="form-label">Employee ID</label>
                    <input type="text" name="employee_id" class="form-control"/>
                    </div>
                    <div class="col-md-8">
                    <label class="form-label">Address</label>
                    <input type="text" name="address" class="form-control"/>
                    </div>
                </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Add Staff</button>
            </form>
        </t>
    </template>

    <!-- Manage Staff -->
    <template id="edit_staff_template" name="Edit Staff">
        <t t-call="odoo_student_management.portal_two_col_layout">
            <t t-set="title">Edit Staff</t>

            <h2>Edit Staff Member</h2>

            <t t-if="error">
            <div class="alert alert-danger" role="alert" t-out="error"/>
            </t>
            <t t-if="success">
            <div class="alert alert-success" role="alert" t-out="success"/>
            </t>

            <form t-attf-action="/student_management/admin/staff/edit/{{ staff.id }}" method="post" class="o_website_form">
            <!-- ✅ CSRF token -->
            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

            <!-- Update Staff Email -->
            <div class="card mb-3">
                <div class="card-body">
                <h5 class="mb-3">Staff Information</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" t-att-value="staff.user_id.email"/>
                    </div>
                    <div class="col-md-6">
                    <label class="form-label">Address</label>
                    <input type="text" name="address" class="form-control" t-att-value="staff.address" />
                    </div>
                </div>
                </div>
            </div>

            <button type="button" class="btn-primary" id="saveStaffBtn">Update Staff</button>
            </form>
        </t>
    </template>

    <!-- Manage Staff (list) -->
    <template id="manage_staff_template" name="Manage Staff">
        <t t-call="odoo_student_management.portal_two_col_layout">
            <t t-set="title">Manage Staff</t>
            
            <!-- Modal HTML -->
            <div id="editModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; justify-content: center; align-items: center;">
                <div style="background: white; padding: 20px; border-radius: 10px; width: 90%; max-width: 500px; max-height: 80vh; overflow-y: auto;">
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                        <h4>Edit Staff</h4>
                        <button onclick="closeEditModal()" style="background: none; border: none; font-size: 20px; cursor: pointer;">×</button>
                    </div>
                    <div id="modalContent"></div>
                </div>
            </div>

            <h2>Staff List</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Gender</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="staffs" t-as="staff">
                        <td t-out="staff.name"/>
                        <td t-out="staff.address"/>
                        <td t-out="staff.gender"/>
                        <td t-out="staff.user_id.phone"/>
                        <td t-out="staff.user_id.email"/>
                        <td>
                            <button class="btn btn-sm btn-primary" t-att-onclick="'openEditModal(\'' + str(staff.id) + '\')'">
                                Edit
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>

            <script>
  function openEditModal(staffId) {
    fetch('/student_management/admin/staff/edit/' + staffId)
      .then(r =&gt; r.text())
      .then(html =&gt; {
        const modal = document.getElementById('editModal');
        const container = document.getElementById('modalContent');

        container.innerHTML = html;      // حقن النموذج
        modal.style.display = 'flex';    // إظهار المنبثقة

        wireStaffEdit(staffId);          // ⬅️ اربط الأحداث بعد الحقن
      })
      .catch(err =&gt; {
        console.error('Error:', err);
        window.open('/student_management/admin/staff/edit/' + staffId, '_blank');
      });
  }

  function wireStaffEdit(staffId) {
    const container = document.getElementById('modalContent');
    const form = container.querySelector('#staffEditForm') || container.querySelector('form');
    const btn = container.querySelector('#submitBtn, #saveStaffBtn, button[type="submit"]');
    const loading = container.querySelector('#loading');

    if (!form) return;

    // حدّد رابط الإرسال (من action إن وجد وإلا استخدم الـ id)
    const editUrl = (form.getAttribute('action') &amp;&amp; form.getAttribute('action').trim())
                    ? form.getAttribute('action')
                    : '/student_management/admin/staff/edit/' + staffId;

    // تجنّب الإرسال العادي
    form.addEventListener('submit', function(e){ e.preventDefault(); doSubmit(); });
    if (btn) {
      if (btn.type === 'submit') btn.type = 'button'; // منع الإرسال العادي
      btn.addEventListener('click', function(e){ e.preventDefault(); doSubmit(); });
    }
    form.addEventListener('keydown', function(e){
      if (e.key === 'Enter') { e.preventDefault(); doSubmit(); }
    });

    function doSubmit() {
      if (btn) btn.disabled = true;
      if (loading) loading.style.display = 'block';

      const fd = new FormData(form);
      fetch(editUrl, {
        method: 'POST',
        body: fd,
        headers: { 'X-Requested-With': 'XMLHttpRequest' }
      })
      .then(r =&gt; r.text())
      .then(text =&gt; {
        if (loading) loading.style.display = 'none';
        if (text.trim() === 'OK') {
          closeEditModal();                       // اغلق المنبثقة
          alert('تم تعديل بيانات الموظف بنجاح'); // رسالة نجاح
          // لو تحب تحدّث القائمة:
          // location.reload();
        } else {
          alert('خطأ: ' + text);
          if (btn) btn.disabled = false;
        }
      })
      .catch(err =&gt; {
        if (loading) loading.style.display = 'none';
        if (btn) btn.disabled = false;
        alert('Network error. Please try again.');
        console.error(err);
      });
    }
  }

  function closeEditModal() {
    document.getElementById('editModal').style.display = 'none';
    document.getElementById('modalContent').innerHTML = '';
  }
</script>

        </t>
    </template>






</odoo>
