        <t t-call="odoo_student_management.portal_two_col_layout">
            <t t-set="title">Add New Student</t>

            <!-- عرض رسائل الخطأ أو النجاح -->
            <t t-if="error">
                <div class="alert alert-danger" role="alert" t-out="error"/>
            </t>
            <t t-if="success">
                <div class="alert alert-success" role="alert" t-out="success"/>
            </t>

            <form action="/student_management/admin/student/add" method="post" class="o_website_form" enctype="multipart/form-data">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                <!-- ================== 1. ربط مستخدم موجود ================== -->
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="mb-3">Link Existing User</h5>
                        <div class="row g-3 align-items-end">
                            <div class="col-md-8">
                                <label class="form-label" for="user_id">Select User</label>
                                <select name="user_id" id="user_id" class="form-select">
                                    <option value="">-- Choose an existing user --</option>
                                    <!-- يتم عرض المستخدمين الذين لديهم صلاحية طالب وغير مرتبطين بطالب آخر -->
                                    <t t-foreach="available_users or []" t-as="u">
                                        <option t-att-value="u.id">
                                            <t t-out="u.name"/> (<t t-out="u.login"/>)
                                        </option>
                                    </t>
                                </select>
                                <small class="text-muted">Only users with 'Student' access rights who are not already linked to a student profile are shown.</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center my-2">— OR —</div>

                <!-- ================== 2. إنشاء مستخدم جديد ================== -->
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="mb-3">Create New User</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label" for="name">Full Name</label>
                                <input type="text" name="name" id="name" class="form-control"/>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" for="email">Email (for login)</label>
                                <input type="email" name="email" id="email" class="form-control"/>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" for="password">Password</label>
                                <input type="password" name="password" id="password" class="form-control"/>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" for="phone">Phone</label>
                                <input type="text" name="phone" id="phone" class="form-control"/>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ================== 3. بيانات الطالب الأكاديمية والشخصية ================== -->
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="mb-3">Student Information</h5>
                        <div class="row g-3">
                            <!-- الحقول الأكاديمية -->
                            <div class="col-md-6">
                                <label class="form-label" for="course_id">Course</label>
                                <select name="course_id" id="course_id" class="form-select" required="required">
                                    <t t-foreach="courses or []" t-as="c">
                                        <option t-att-value="c.id" t-out="c.course_name"/>
                                    </t>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" for="session_year_id">Session Year</label>
                                <select name="session_year_id" id="session_year_id" class="form-select" required="required">
                                    <t t-foreach="session_years or []" t-as="s">
                                        <option t-att-value="s.id" t-out="s.display_name"/>
                                    </t>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" for="student_id">Student ID</label>
                                <input type="text" name="student_id" id="student_id" class="form-control"/>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" for="date_of_birth">Date of Birth</label>
                                <input type="date" name="date_of_birth" id="date_of_birth" class="form-control"/>
                            </div>
                            
                            <!-- الحقول الشخصية -->
                            <div class="col-md-12">
                                <label class="form-label" for="address">Address</label>
                                <input type="text" name="address" id="address" class="form-control"/>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" for="gender">Gender</label>
                                <select name="gender" id="gender" class="form-select">
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" for="profile_pic">Profile Picture</label>
                                <input type="file" name="profile_pic" id="profile_pic" class="form-control"/>
                            </div>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Add Student</button>
            </form>
        </t>
    </template>







</odoo>
