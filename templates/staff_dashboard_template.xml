<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
        هذا هو القالب الصحيح للداشبورد.
        1. يستدعي التخطيط العام ذو العمودين.
        2. يمرر عنوان الصفحة (title).
        3. يضع كل محتوى الداشبورد داخل كتلة t-call.
           سيتم حقن هذا المحتوى في مكان <t t-raw="0"/> في التخطيط العام.
    -->
    <template id="staff_dashboard_template" name="Staff Dashboard">
        <t t-call="odoo_student_management.portal_two_col_layout">
            <t t-set="title">Staff Dashboard</t>
            
            <!-- START OF PAGE CONTENT -->
            <!-- Header Section - Improved -->
            <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
                <div>
                    <h1 class="mb-1" style="color: #2c3e50; font-weight: 600;">
                        <i class="fa fa-tachometer me-2"/>Staff Dashboard
                    </h1>
                    <p class="text-muted mb-0">
                        <i class="fa fa-user-circle-o me-1"/>Welcome, <span style="color: #3498db; font-weight: 500;"><t t-out="staff.name"/></span>
                    </p>
                </div>
            </div>
            <!-- Stats Cards Section -->
            <div class="row mb-4 g-4">
                <div class="col-md-3">
                    <div class="card text-center h-100 shadow-sm">
                        <div class="card-body py-4">
                            <h5 class="card-title text-secondary mb-2">Total Students</h5>
                            <p class="card-text fs-3 fw-bold text-dark"><t t-out="student_count"/></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center h-100 shadow-sm">
                        <div class="card-body py-4">
                            <h5 class="card-title text-secondary mb-2">Subjects Taught</h5>
                            <p class="card-text fs-3 fw-bold text-dark"><t t-out="subjects_count"/></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center h-100 shadow-sm">
                        <div class="card-body py-4">
                            <h5 class="card-title text-secondary mb-2">Total Attendance</h5>
                            <p class="card-text fs-3 fw-bold text-dark"><t t-out="attendance_count"/></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center h-100 shadow-sm">
                        <div class="card-body py-4">
                            <h5 class="card-title text-secondary mb-2">Approved Leaves</h5>
                            <p class="card-text fs-3 fw-bold text-dark"><t t-out="leave_count"/></p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Main Content Section -->
            <div class="row g-4">
                <!-- Left Column: Subject Data -->
                <div class="col-lg-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Attendance by Subject</h5>
                            <button class="btn btn-sm btn-outline-secondary toggle-btn" type="button" data-bs-toggle="collapse" data-bs-target="#subjectCollapse" aria-expanded="false" aria-controls="subjectCollapse">
                                <i class="fa fa-plus"></i>
                            </button>
                        </div>
                        <div id="subjectCollapse" class="collapse">
                            <div class="card-body">
                                <ul class="list-group list-group-flush">
                                    <t t-foreach="subject_data" t-as="subject">
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <t t-out="subject['name']"/>
                                            <span class="badge bg-primary rounded-pill"><t t-out="subject['attendance_count']"/> records</span>
                                        </li>
                                    </t>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Right Column: Student Data -->
                <div class="col-lg-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Student Attendance Summary</h5>
                            <button class="btn btn-sm btn-outline-secondary toggle-btn" type="button" data-bs-toggle="collapse" data-bs-target="#studentCollapse" aria-expanded="false" aria-controls="studentCollapse">
                                <i class="fa fa-plus"></i>
                            </button>
                        </div>
                        <div id="studentCollapse" class="collapse">
                            <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                                <table class="table table-hover">
                                    <thead>
                                        <tr><th>Student</th><th>Present</th><th>Absent</th></tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="student_data" t-as="student">
                                            <tr>
                                                <td><t t-out="student['name']"/></td>
                                                <td><span class="badge bg-success"><t t-out="student['present_count']"/></span></td>
                                                <td><span class="badge bg-danger"><t t-out="student['absent_count']"/></span></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END OF PAGE CONTENT -->
            <!-- Custom CSS Styles -->
            <style>
                .icon-circle {
                    width: 50px;
                    height: 50px;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                }
                .bg-primary-light {
                    background-color: rgba(52, 152, 219, 0.1);
                }
                .bg-info-light {
                    background-color: rgba(23, 162, 184, 0.1);
                }
                .bg-success-light {
                    background-color: rgba(40, 167, 69, 0.1);
                }
                .bg-warning-light {
                    background-color: rgba(255, 193, 7, 0.1);
                }
                .card {
                    border-radius: 12px;
                    transition: transform 0.2s ease, box-shadow 0.2s ease;
                }
                .card:hover {
                    transform: translateY(-2px);
                    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
                }
                .table thead th {
                    border-bottom: none;
                    font-weight: 500;
                    color: #6c757d;
                    text-transform: uppercase;
                    font-size: 0.75rem;
                    letter-spacing: 0.5px;
                }
                .table tbody tr {
                    border-bottom: 1px solid #f0f0f0;
                }
                .table tbody tr:last-child {
                    border-bottom: none;
                }
                .toggle-btn {
                    width: 28px;
                    height: 28px;
                    padding: 0;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    border-radius: 50%;
                }
                .toggle-btn i {
                    transition: transform 0.3s;
                }
                .toggle-btn:not(.collapsed) .fa-plus:before {
                    content: "\f068";
                }
            </style>
            <!-- JavaScript for toggle icons -->
            <script>
                $(document).ready(function() {
                    $('.toggle-btn').on('click', function() {
                        $(this).find('i').toggleClass('fa-plus fa-minus');
                    });
                });
            </script>
        </t>
    </template>
</odoo>